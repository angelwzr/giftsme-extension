{
  "name": "__MSG_appName__",
  "version": "1.0.3",
  "description": "__MSG_appDesc__",
  "author": "Roman Linev",
  "homepage_url": "https://github.com/angelwzr/giftsme-extension",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "/icons/icon_16.png",
    "default_title": "__MSG_appName__"
  },
  "commands": {
    "keyblock": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "linux": "Ctrl+Shift+U"
      },
      "description": "Add to wishlist"
    }
  },
  "icons": {
    "16": "/icons/icon_16.png",
    "32": "/icons/icon_32.png",
    "48": "/icons/icon_48.png",
    "128": "/icons/icon_128.png"
  }
}